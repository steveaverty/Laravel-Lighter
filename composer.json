{
  "name": "avertys/lighter",
  "description": "Make your requests lighter",
  "keywords": ["laravel", "request", "lighter"],
  "homepage": "https://github.com/steveaverty/Laravel-Lighter",
  "license": "MIT",
  "authors": [
    {
      "name": "Steve averty",
      "email": "steveaverty.developer@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0"
  },
  "autoload": {
    "psr-4": {
      "Avertys\\Lighter\\": "src/"
    },
    "files": [
        "src/helpers.php"
    ]
  },
  "extra": {
    "laravel": {
        "providers": [
            "Avertys\\Lighter\\ServiceProvider"
        ]
    }
  },
  "minimum-stability": "dev"
}
